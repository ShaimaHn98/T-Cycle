<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context="com.tcycle.tcycle.Waste_Sort_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/pic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondry"
            android:fontFamily="@font/tajawal"
            android:gravity="center"
            android:text="الفرز حسب الأصول"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_plastic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/tajawal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="بلاستيك"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_iron"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/tajawal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="حديد"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_paper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/tajawal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="ورق وكتب"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_almanuim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/tajawal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="ألمنيوم"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_nuhas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/tajawal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="نحاس"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_carton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle"
                    android:fontFamily="@font/tajawal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="كرتون"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorforveriy"
        android:fontFamily="@font/tajawal"
        android:text="تأكيد الطلب"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>