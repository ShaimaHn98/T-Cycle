<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context=".Waste_Sort_Activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:background="@color/colorSecondry"
        android:gravity="center"
        android:text="الفرز حسب الأصول"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="275dp"
        android:layout_height="402dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="25dp">

                <Button
                    android:id="@+id/btn_plastic"
                    android:layout_width="103dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="بلاستيك"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_iron"
                    android:layout_width="103dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="حديد"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_google_signin_btn_text_dark_default"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="25dp">

                <Button
                    android:id="@+id/btn_paper"
                    android:layout_width="103dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="ورق وكتب"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_almanuim"
                    android:layout_width="103dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="ألمنيوم"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_default"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="25dp">

                <Button
                    android:id="@+id/btn_nuhas"
                    android:layout_width="103dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="نحاس"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_carton"
                    android:layout_width="103dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="كرتون"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="363dp"
        android:layout_height="141dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic" />

    <Button
        android:id="@+id/btn_confirme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorforveriy"
        android:text="تأكيد الطلب"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>